{
	"settings": {
		"analysis": {
			"char_filter": {
				"quotes": {
					"type": "mapping",
					"mappings": [
						"\\u0091=>\\u0027",
						"\\u0092=>\\u0027",
						"\\u2018=>\\u0027",
						"\\u2019=>\\u0027",
						"\\u201B=>\\u0027"
					]
				}
			},
			"filter":{
				"filter_shingle":{
					"type":"shingle",
					"max_shingle_size":2,
					"min_shingle_size":2,
					"output_unigrams":false
				},
				"english_stop": {
					"type":       "stop",
					"stopwords":  "_english_"
				},
				"english_stemmer": {
					"type":       "stemmer",
					"language":   "english"
				},
				"english_possessive_stemmer": {
					"type":       "stemmer",
					"language":   "possessive_english"
				}
			},
			"analyzer": {
				"url": {
					"type": "custom",
					"char_filter": ["html_strip"],
					"tokenizer": "lowercase",
					"filter": ["stop"]
				},
				"raw_plain": {
					"type": "custom",
					"char_filter": ["quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "stop"]
				},
				"raw_html": {
					"type": "custom",
					"char_filter": ["html_strip", "quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "stop"]
				},
				"english_plain": {
					"type": "custom",
					"char_filter": ["quotes"],
					"tokenizer": "standard",
					"filter": [
						"english_possessive_stemmer",
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				},
				"english_html": {
					"type": "custom",
					"char_filter": ["html_strip", "quotes"],
					"tokenizer": "standard",
					"filter": [
						"english_possessive_stemmer",
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				},
				"shingle_plain":{
					"type": "custom",
					"char_filter": ["quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "filter_shingle"]
				},
				"shingle_html":{
					"type": "custom",
					"char_filter": ["html_strip", "quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "filter_shingle"]
				}
			}
		}
	},
	"mappings": {
		"tor": {
			"properties": {
				"url": {
					"type": "text",
					"analyzer": "url"
				},

				"raw_url": {
					"type": "keyword"
				},

				"h1": {
					"type": "text"
				},

				"raw_title": {
					"type": "text"
				},

				"title": {
					"type": "keyword",
					"copy_to": "fancy"
				},
				"meta": {
					"type": "keyword"	,
					"copy_to": "fancy"
				},
				"anchors": {
					"type": "keyword",
					"copy_to": "fancy"
				},
				"fancy": {
					"type": "text",
					"analyzer": "raw_plain",
					"fields": {
						"shingles": {
							"type": "text",
							"analyzer": "shingle_plain"
						},
						"english": {
							"type": "text",
							"analyzer": "english_plain"
						}
					}
				},

				"raw_text": {
					"type": "text"
				},

				"content": {
					"type": "text",
					"analyzer": "raw_html",
					"fields": {
						"shingles": {
							"type": "text",
							"analyzer": "shingle_html"
						},
						"english": {
							"type": "text",
							"analyzer": "english_html"
						}
					}
				},

				"domain": {
					"type": "keyword"
				},
				"lang": {
					"type": "keyword"
				},
				"content_type": {
					"type": "keyword"
				},
				"content_checksum": {
					"type": "keyword"
				},

				"code": {
					"type": "short"
				},
				"is_fake": {
					"type": "boolean"
				},
				"is_banned": {
					"type": "boolean"
				},

				"updated_on": {
					"type": "date",
					"format": "dateOptionalTime"
				},
				"last_seen": {
					"type": "date",
					"format": "dateOptionalTime"
				},

				"authority": {
					"type": "double"
				},
				"visits": {
					"type": "long"
				},
				"clicks": {
					"type": "long"
				},
				"backlinks": {
					"type": "long"
				}
			}
		},
		"i2p": {
			"properties": {
				"url": {
					"type": "text",
					"analyzer": "url"
				},

				"title": {
					"type": "keyword",
					"copy_to": "fancy"
				},
				"meta": {
					"type": "keyword",
					"copy_to": "fancy"
				},
				"anchors": {
					"type": "keyword",
					"copy_to": "fancy"
				},
				"fancy": {
					"type": "text",
					"analyzer": "raw_plain",
					"fields": {
						"shingles": {
							"type": "text",
							"analyzer": "shingle_plain"
						},
						"english": {
							"type": "text",
							"analyzer": "english_plain"
						}
					}
				},

				"content": {
					"type": "text",
					"analyzer": "raw_html",
					"fields": {
						"shingles": {
							"type": "text",
							"analyzer": "shingle_html"
						},
						"english": {
							"type": "text",
							"analyzer": "english_html"
						}
					}
				},

				"domain": {
					"type": "keyword"
				},
				"lang": {
					"type": "keyword"
				},
				"content_type": {
					"type": "keyword"
				},
				"content_checksum": {
					"type": "keyword"
				},

				"code": {
					"type": "short"
				},
				"is_fake": {
					"type": "boolean"
				},
				"is_banned": {
					"type": "boolean"
				},

				"updated_on": {
					"type": "date",
					"format": "dateOptionalTime"
				},
				"last_seen": {
					"type": "date",
					"format": "dateOptionalTime"
				},

				"authority": {
					"type": "double"
				},
				"visits": {
					"type": "long"
				},
				"clicks": {
					"type": "long"
				},
				"backlinks": {
					"type": "long"
				}
			}
		}
	}
}
