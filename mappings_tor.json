{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "refresh_interval": "5m",
      "max_result_window": 30000,
      "codec": "best_compression"
    },
    "analysis": {
      "char_filter": {
        "quotes": {
          "type": "mapping",
          "mappings": [
            "\\u0091=>\\u0027",
            "\\u0092=>\\u0027",
            "\\u2018=>\\u0027",
            "\\u2019=>\\u0027",
            "\\u201B=>\\u0027"
          ]
        }
      },
      "filter": {
        "filter_shingle": {
          "type": "shingle",
          "max_shingle_size": 2,
          "min_shingle_size": 2,
          "output_unigrams": false
        },
        "english_stop": { "type": "stop", "stopwords": "_english_" },
        "english_stemmer": { "type": "stemmer", "language": "english" },
        "english_possessive_stemmer": { "type": "stemmer", "language": "possessive_english" }
      },
      "analyzer": {
        "url_analyzer": {
          "type": "custom",
          "char_filter": ["html_strip"],
          "tokenizer": "uax_url_email",
          "filter": ["lowercase"]
        },
        "raw_plain": {
          "type": "custom",
          "char_filter": ["quotes"],
          "tokenizer": "standard",
          "filter": ["lowercase", "stop"]
        },
        "english_plain": {
          "type": "custom",
          "char_filter": ["quotes"],
          "tokenizer": "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "english_stop",
            "english_stemmer"
          ]
        },
        "shingle_plain": {
          "type": "custom",
          "char_filter": ["quotes"],
          "tokenizer": "standard",
          "filter": ["lowercase", "filter_shingle"]
        }
      }
    }
  },

  "mappings": {
    "dynamic": "false",
    "properties": {

      "url": {
        "type": "text",
        "analyzer": "url_analyzer"
      },

      "h1": {
        "type": "text",
        "analyzer": "raw_plain"
      },

      "title": {
        "type": "text",
        "analyzer": "raw_plain",
        "fields": {
          "english":  { "type": "text", "analyzer": "english_plain" },
          "shingles": { "type": "text", "analyzer": "shingle_plain" }
        }
      },

      "meta": {
        "type": "text",
        "analyzer": "raw_plain",
        "fields": {
          "english":  { "type": "text", "analyzer": "english_plain" },
          "shingles": { "type": "text", "analyzer": "shingle_plain" }
        }
      },

      "content": {
        "type": "text",
        "analyzer": "raw_plain",
        "fields": {
          "english":  { "type": "text", "analyzer": "english_plain" },
          "shingles": { "type": "text", "analyzer": "shingle_plain" }
        }
      },

      "domain": { "type": "keyword" },

      "content_type": { "type": "keyword" },

      "updated_on": {
        "type": "date",
        "format": "strict_date_optional_time"
      },

      "is_banned": {
        "type": "boolean"
      }
    }
  }
}
